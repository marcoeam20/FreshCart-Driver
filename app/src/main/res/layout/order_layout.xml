<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ord_CustName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="80dp"
        android:text="Customer Name"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="14sp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/tasks_TaskOrderID"
        android:layout_alignParentStart="true" />

    <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:layout_width="64dp"-->
        <!--android:layout_height="64dp"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:src="@drawable/defaultuser"-->
        <!--android:id="@+id/tasks_ThumbImage" />-->


    <TextView
        android:id="@+id/tasks_UsersAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ord_CustName"
        android:layout_below="@+id/ord_CustName"
        android:layout_marginTop="3dp"
        android:text="Address"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tasks_TaskStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ord_CustName"
        android:layout_below="@+id/ord_CustName"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="10dp"
        android:text="Status"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/task_UsersContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tasks_UsersAddress"
        android:layout_below="@+id/tasks_UsersAddress"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="Contact"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tasks_TaskOrderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ord_CustName"
        android:layout_marginTop="18dp" />

</RelativeLayout>